<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="15dip">
    
      <Button
          	android:id="@+id/cancelButton"
            android:background="@drawable/red_x_selector"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCancelDownloadClick"/>
            
      <LinearLayout
   		 xmlns:android="http://schemas.android.com/apk/res/android"
   		 android:orientation="vertical" 
   		 android:layout_width="250dip"
   		 android:layout_height="fill_parent"
   		 android:onClick="onDownloadEntryClick">
            
   		  <TextView android:id="@+id/fileName"
     		  	android:layout_width="255dip"
      			android:layout_height="20dip"
      			android:ellipsize="end"
      		  	android:textSize="13dip"
      		  	android:textColor="#f5f5f5"/>  
      	  <ProgressBar
      	      	 android:id="@+id/progressbar"
       			 android:layout_width="255dip"
         		 android:layout_height="4dip"
         		 style="@android:style/Widget.ProgressBar.Horizontal"
         		/>      	        		  	
   		   <TextView android:id="@+id/eta"
     		  	android:layout_width="wrap_content"
      			android:layout_height="wrap_content"
      		  	android:textSize="11dp"
      		  	android:textColor="#f5f5f5"/> 
      		  	   		  
      </LinearLayout>
      
      <TextView android:id="@+id/percentage"
     		  	android:layout_width="wrap_content"
      			android:layout_height="wrap_content"
      		  	android:textSize="13dp"
      		  	android:textColor="#f5f5f5"/> 
      
</LinearLayout>