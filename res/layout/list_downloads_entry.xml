<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dip">

      <Button
          	android:id="@+id/downloads_cancelButton"
            android:background="@drawable/red_x_selector"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:onClick="onCancelDownloadClick"/>
            
      <LinearLayout
   		 android:orientation="vertical" 
   		 android:layout_width="fill_parent"
   		 android:layout_height="wrap_content"
   		 android:onClick="onDownloadEntryClick">
       
                <LinearLayout
     		  		android:layout_width="fill_parent"
      				android:layout_height="wrap_content"
      				android:orientation="horizontal"> 
   		 
                    <TextView android:id="@+id/downloads_fileName"
     		  			android:layout_width="240dp"
      					android:layout_height="25dp"
      					android:ellipsize="end"
      					android:maxLines="2"
      		  			android:textSize="13dp"
      		  			android:textColor="#f5f5f5"/>  
      		  	
                    <TextView
                        android:id="@+id/downloads_percentage"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:textColor="#f5f5f5"
                        android:textSize="12dp" />

      		  </LinearLayout>      		  	
      	  <ProgressBar
      	      	 android:id="@+id/downloads_progressbar"
       			 android:layout_width="fill_parent"
         		 android:layout_height="5dp"
         		 style="@android:style/Widget.ProgressBar.Horizontal"
         		/>      
         		
          <LinearLayout
   		 	android:orientation="horizontal" 
   		 	android:layout_width="fill_parent"
   		 	android:layout_height="wrap_content"
   		 	android:onClick="onDownloadEntryClick">
                         		  	  	        		  	
   			   <TextView android:id="@+id/downloads_status"
     			  	android:layout_width="240dp"
      				android:layout_height="20dp"
      				android:maxLines="1"
      			  	android:textSize="12dp"
      			  	android:textColor="#f5f5f5"/>
   			   
   			       <TextView android:id="@+id/downloads_activity_file_size"
     		  			android:layout_width="fill_parent"
      					android:layout_height="20dp"      					
      					android:ellipsize="end"
      					android:maxLines="1"
      					android:gravity="right"
      		  			android:textSize="12dp"
      		  	 		android:textColor="#f5f5f5"/>
        	
       		        		  	
      	 </LinearLayout>	  	   		  
      </LinearLayout>
</LinearLayout>
